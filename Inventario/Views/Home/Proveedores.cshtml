
@model IEnumerable<Proveedor>
@{
    ViewData["Title"] = "Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Proveedores</h1>

<div class="card">
    <div class="card-header">
        Lista de productos.
    </div>
    <div class="card-body">
        <a asp-action="upsertProveedor" class="btn btn-outline-success"
           asp-controller="Home" asp-route-id="0">Nuevo Proveedor</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.CorreoElectronico)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>Opciones</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.Id">
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        
                        <td>
                            <a asp-action="upsertProveedor" asp-controller="Home" asp-route-id="@item.Id"
                               class="btn btn-outline-primary btn-sm">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a> |
                            <a asp-action="eliminarProveedor" asp-controller="Home" asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>